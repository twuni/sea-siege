.card
  border-radius 10px
  width 200px
  height 300px
  font-size 12px
  border-style solid
  border-color #000
  border-width 10px
  background-color #531
  color #fff
  display flex
  align-items stretch
  flex-direction column

  &:hover
    box-shadow 0 0 5px #00f

  & > header
  & > .oracle
    border-radius 5px
    background-color rgba(255, 255, 220, 0.75)
    color #333

  & > header
  & > .oracle
    margin 5px
    padding 5px

  & > header

    & > h1
      margin 0
      padding 0
      font-family serif
      font-size 1em
      font-weight 800

  & > img
    flex 2
    margin 5px
    border-radius 5px
    overflow hidden

  & > .oracle
    flex 3
    display flex
    flex-direction column
    align-items stretch

    & > footer

      & > blockquote
        margin 0
        padding 0
        font-style italic

      & > author
        margin 0 0 0 1em

        &:before
          content '- '
