.card-view-mana-cost-component
  display flex
  flex-direction row

  & > span
    flex 1
    display inline-block
    border-radius 0.5em
    padding 0
    margin 0 0 0 0.1em
    width 1em
    height 1em
    line-height 1em
    background-color #e0e0e0
    color #000
    text-align center

    &.blue
      background-color #8080f0

    &.green
      background-color #80f080

    &.red
      background-color #f08080

    &.black
      background-color #000
      color #fff

    &.white
      background-color #fff
