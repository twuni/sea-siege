.card-view-component

  .card-oracle-component
    border-radius 5px
    background-color rgba(255, 255, 220, 0.75)
    color #333
    margin 5px
    padding 5px
    display flex
    flex-direction column
    align-items stretch
    font-size 0.8em

    p
      margin 0 0 0.5em
      padding 0

    & > footer

      & > blockquote
        margin 0
        padding 0
        font-style italic

        &:before
        &:after
          content '"'

      & > author
        margin 0 0 0 1em

        &:before
          content '- '
