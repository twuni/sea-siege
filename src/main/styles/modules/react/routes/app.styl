.app-route
  flex 1
  display flex
  flex-direction column
  background-color #505050
  color #f0f0f0

  > .header-component
    background-color rgba(0, 0, 0, 0.4)
    display flex
    flex-direction row
    align-items center
    position relative
    padding 0

    > .link-component
      text-decoration none
      flex 1
      padding 10px
      min-height 28px

      > h3
        font-size 24px
        margin-left 32px

      > img
        position absolute
        top 0
        left 0
        margin 10px
        width 28px
        height 28px

    > .breadcrumbs-component
      display flex
      flex-direction row
      border-style solid
      border-color #282828
      border-width 0

      > .link-component
        border-radius 10px 0 0 30px
        border-left solid 1px rgba(0, 0, 0, 0.2)
        background-color #2c2c2c
        color #555
        padding 10px 40px 10px 10px
        margin-left -30px
        line-height 28px
        text-transform capitalize
        text-decoration none
        transition-duration 100ms
        transition-timing-function ease-in-out
        transition-property background-color, color

        &:first-of-type
          margin-left 0

        &:last-of-type
          padding 10px

        &.active
          color #777

        &:hover
          background-color #282828
          color #999

  > section
    flex 1
    display flex
    flex-direction row
    align-items stretch

    > aside
      width 180px
      background-color rgba(0, 0, 0, 0.1)
      border-right solid 1px rgba(0, 0, 0, 0.3)
      transition-property width
      transition-duration 100ms
      transition-timing-function ease-in-out

      > nav

        > .link-component
          display block
          padding 10px
          text-shadow 1px 1px 0 rgba(0, 0, 0, 0.75)
          background-color rgba(0, 0, 0, 0)
          color #fff
          text-decoration none
          transition-property background-color
          transition-timing-function ease-in-out
          transition-duration 100ms
          border-bottom solid 1px rgba(0, 0, 0, 0.05)

          &:hover
            background-color rgba(0, 0, 0, 0.1)

          &.active
            background-color rgba(0, 0, 0, 0.05)
            color #fc3

            &:hover
              background-color rgba(0, 0, 0, 0.15)

          > span
            font-size 14px
            line-height 18px

          > .icon-component
            font-size 18px
            line-height 18px
            padding 0 10px 0 0

    > section
      flex 1

@media screen and (max-width: 400px)

  .app-route

    > .header-component > .link-component > h3
      display none

    > section > aside
      width initial

      > nav > .link-component

        > span
          display none

        > .icon-component
          padding 0
          color #fff

        &.active > .icon-component
          color #fc3
